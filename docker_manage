#!/usr/bin/bash

# Change variables here:
APPDATA_LOC="${PWD}/appdata"
COMPOSE_LOC="${PWD}/docker-compose.yml"

# Don't change variables below unless you want to customize the script
VERSIONS_LOC="${APPDATA_LOC}/versions.txt"

# Functions
function detect_docker_compose_command {
  if docker compose > /dev/null 2>&1; then
    COMPOSE_COMMAND="docker compose"
  elif command -v docker-compose > /dev/null 2>&1; then
    if ! [[ $(alias docker-compose 2> /dev/null) ]] ; then
      COMPOSE_COMMAND="docker-compose"
    fi
  else
    echo -e "\e[31mCannot find Docker Compose.\e[0m"
    exit 1
  fi
}

function detect_docker_compose_file {
  if [ ! -f "$COMPOSE_LOC" ]; then
    echo -e "\e[31mCannot find Docker Compose File.\e[0m"
    exit 1
  fi
}

function backup {
    echo "Detecting containers"
    [ -f "$VERSIONS_LOC" ] && mv "$VERSIONS_LOC" "${VERSIONS_LOC}.bak"
    for i in $("$COMPOSE_COMMAND" -f "$COMPOSE_LOC" config --services); do
        container_name=$(docker run --rm -v "$(dirname "$COMPOSE_LOC")":/workdir mikefarah/yq:4 e .services."${i}".container_name "$(awk -F/ '{print $NF}' <<< "$COMPOSE_LOC")")
        image_name=$(docker inspect --format='{{ index .Config.Image }}' "$container_name")
        repo_digest=$(docker inspect --format='{{ index .RepoDigests 0 }}' "$(docker inspect --format='{{ .Image }}' "$container_name")")
        echo "$container_name,$image_name,$repo_digest" >> "$VERSIONS_LOC"
    done
    [ -f "${VERSIONS_LOC}.bak" ] && rm "${VERSIONS_LOC}.bak"

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Stopping stack"
    "$COMPOSE_COMMAND" -f "$COMPOSE_LOC" down

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    APPDATA_NAME=$(echo "$APPDATA_LOC" | awk -F/ '{print $NF}')
    echo "Backing up \"docker-compose.yml\""
    cp -a "$COMPOSE_LOC" "$APPDATA_LOC"/docker-compose.yml.bak
    echo "Backing up \"$APPDATA_LOC\""
    tar -C "$APPDATA_LOC"/.. -cf - "$APPDATA_NAME" | pv -terb -s $(du -sb "$APPDATA_LOC" | awk '{print $1}') | gzip > "$APPDATA_LOC"/../appdatabackup.tar.gz

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Starting stack"
    "$COMPOSE_COMMAND" -f "$COMPOSE_LOC" up -d
    chown "${USER}":"${USER}" "$APPDATA_LOC"/../appdatabackup.tar.gz
}

function update {
    echo "Detecting containers"
    [ -f "$VERSIONS_LOC" ] && mv "$VERSIONS_LOC" "${VERSIONS_LOC}.bak"
    for i in $("$COMPOSE_COMMAND" -f "$COMPOSE_LOC" config --services); do
        container_name=$(docker run --rm -v "$(dirname "$COMPOSE_LOC")":/workdir mikefarah/yq:4 e .services."${i}".container_name "$(awk -F/ '{print $NF}' <<< "$COMPOSE_LOC")")
        image_name=$(docker inspect --format='{{ index .Config.Image }}' "$container_name")
        repo_digest=$(docker inspect --format='{{ index .RepoDigests 0 }}' "$(docker inspect --format='{{ .Image }}' "$container_name")")
        echo "$container_name,$image_name,$repo_digest" >> "$VERSIONS_LOC"
    done
    [ -f "${VERSIONS_LOC}.bak" ] && rm "${VERSIONS_LOC}.bak"

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Pulling images"
    "$COMPOSE_COMMAND" -f "$COMPOSE_LOC" pull

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Stopping stack"
    "$COMPOSE_COMMAND" -f "$COMPOSE_LOC" down

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    APPDATA_NAME=$(echo "$APPDATA_LOC" | awk -F/ '{print $NF}')
    echo "Backing up \"docker-compose.yml\""
    cp -a "$COMPOSE_LOC" "$APPDATA_LOC"/docker-compose.yml.bak
    echo "Backing up \"$APPDATA_LOC\""
    tar -C "$APPDATA_LOC"/.. -cf - "$APPDATA_NAME" | pv -terb -s $(du -sb "$APPDATA_LOC" | awk '{print $1}') | gzip > "$APPDATA_LOC"/../appdatabackup.tar.gz

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Starting stack"
    "$COMPOSE_COMMAND" -f "$COMPOSE_LOC" up -d
    chown "${USER}":"${USER}" "$APPDATA_LOC"/../appdatabackup.tar.gz

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Pruning images"
    docker image prune -f
}

function restore {
    echo "Stopping stack"
    "$COMPOSE_COMMAND" -f "$COMPOSE_LOC" down

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Restoring backup"
    randstr=$(< /dev/urandom tr -dc _A-Z-a-z-0-9 | head -c"${1:-8}";echo;)
    mv "$APPDATA_LOC" "${APPDATA_LOC}.$randstr"
    cp -a "$COMPOSE_LOC" "${COMPOSE_LOC}.$randstr"
    mkdir -p "$APPDATA_LOC"
    gunzip --stdout "$APPDATA_LOC"/../appdatabackup.tar.gz | pv -terb -s $(du -sb "$APPDATA_LOC"/../appdatabackup.tar.gz | awk '{print $1}') | tar -C "$APPDATA_LOC"/../ -xf -
    while IFS= read -r line; do
        image_name=$(echo "$line" | awk -F, '{print $2}')
        repo_digest=$(echo "$line" | awk -F, '{print $3}')
        sed -i "s#image: ${image_name}#image: ${repo_digest}#g" "$COMPOSE_LOC"
    done < <(cat "$VERSIONS_LOC")

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Pulling images"
    "$COMPOSE_COMMAND" -f "$COMPOSE_LOC" pull

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Starting stack"
    "$COMPOSE_COMMAND" -f "$COMPOSE_LOC" up -d
}

function resume {
    echo "Resuming"
    while IFS= read -r line; do
        image_name="$(echo "$line" | awk -F, '{print $2}')"
        repo_digest="$(echo "$line" | awk -F, '{print $3}')"
        sed -i "s#image: ${repo_digest}#image: ${image_name}#g" "$COMPOSE_LOC"
    done < <(cat "$VERSIONS_LOC")

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Pulling images"
    "$COMPOSE_COMMAND" -f "$COMPOSE_LOC" pull

    read -r -p "Continue with Enter or cancel with CTRL+C..."
    echo "Starting stack"
    "$COMPOSE_COMMAND" -f "$COMPOSE_LOC" up -d
}

# Check if the function exists
if declare -f "$1" > /dev/null; then
  detect_docker_compose_command
  detect_docker_compose_file
  "$@"
else
  echo "The only valid arguments are backup, update, restore, and resume"
  exit 1
fi
